<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".view.HomeFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/addCardMenuLayout"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                card_view:cardCornerRadius="6dp">

                <LinearLayout
                    android:id="@+id/addMenuLayout"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@color/mainColorBlue"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCreateYourEvent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage Your Event"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="12dp"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/sfprodisplay_bold"
                        android:textSize="16sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <Button
                                android:paddingTop="8dp"
                                android:gravity="center"
                                android:id="@+id/btnCreate"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:drawableTop="@drawable/ic_add"
                                android:drawableTint="@android:color/white"
                                android:text="Create"
                                android:textAllCaps="false"
                                android:background="@color/mainColorBlue"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/sfprodisplay_medium"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <Button
                                android:paddingTop="8dp"
                                android:gravity="center"
                                android:id="@+id/btnManage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:drawableTop="@drawable/ic_manage"
                                android:drawableTint="@android:color/white"
                                android:text="Manage"
                                android:textAllCaps="false"
                                android:background="@color/mainColorBlue"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/sfprodisplay_medium"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <Button
                                android:paddingTop="8dp"
                                android:gravity="center"
                                android:id="@+id/btnHistory"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:drawableTop="@drawable/ic_ticket"
                                android:drawableTint="@android:color/white"
                                android:text="Going"
                                android:textAllCaps="false"
                                android:background="@color/mainColorBlue"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/sfprodisplay_medium"/>

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addCardMenuLayout">

                <TextView
                    android:id="@+id/tvTodaysEvent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Feature Update Coming Soon"
                    android:textAlignment="center"
                    android:fontFamily="@font/sfprodisplay_bold"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"/>


            </RelativeLayout>

        </RelativeLayout>




    </android.support.v4.widget.NestedScrollView>

</FrameLayout>