<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_event"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:cardCornerRadius="8dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">
    
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="280dp">


            <ImageView
                android:id="@+id/img_event"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="4dp"
                android:scaleType="centerCrop"
                android:src="@color/comGrey" />
            
            <TextView
                android:id="@+id/tv_tanggal_mulai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Mulai"
                android:fontFamily="@font/sfprotext_semibold"
                android:textColor="@color/comGreen"
                android:layout_below="@+id/img_event"
                android:layout_marginStart="6dp"
                />

            <TextView
                android:id="@+id/tv_nama_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Event"
                android:fontFamily="@font/sfprotext_bold"
                android:textColor="@android:color/black"
                android:layout_below="@+id/tv_tanggal_mulai"
                android:layout_marginStart="6dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="6dp"
                android:ellipsize="end"
                android:maxLines="3"
                />

        <LinearLayout
            android:id="@+id/layout_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_event"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="104dp"
            android:layout_marginEnd="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_lokasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/sfprotext_regular"
                android:text="Kota" />


        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>